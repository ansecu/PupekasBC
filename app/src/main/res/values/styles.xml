<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Styles for textviews inside the relative layout -->
    <style name="TextRelativeLayoutUp">
        <item name="android:textSize">@dimen/TextRelativeLayout_textSize</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:layout_marginRight">@dimen/activity_margin_right</item>
    </style>

    <style name="TextRelativeLayoutDown">
        <item name="android:textSize">@dimen/TextRelativeLayout_textSize</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin_left</item>
    </style>

    <!--Style for Views inside the LinearLayout -->
    <style name="TextLinearLayout">
        <item name="android:textSize">@dimen/TextLinearLayout_textSize</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingLeft">@dimen/activity_padding_left</item>
        <item name="android:paddingRight">@dimen/activity_padding_right</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ImageViews">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingLeft">@dimen/activity_padding_left</item>
        <item name="android:paddingRight">@dimen/activity_padding_right</item>
    </style>

    <style name="ImageViewLast">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
